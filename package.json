{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-linux": "electron-builder --linux",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac"
  },
  "build": {
    "artifactName": "Marina-${os}-${arch}.${ext}",
    "appId": "com.marina.app",
    "productName": "Steam Account Generator",
    "publish": [
      {
        "provider": "generic",
        "url": "https://gitlab.com"
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "repository": "",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "MarinaDevTean",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^7.1.9",
    "electron-builder": "^22.2.0"
  },
  "dependencies": {
    "electron-updater": "^4.2.0"
  }
}
